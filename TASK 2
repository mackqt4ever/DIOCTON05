class Students:
    def __init__(self, name, age, course):
        # Constructor to initialize the attributes
        self.name = name
        self.age = age
        self.course = course
    
    def introduce(self):
        # Method to introduce the student
        print(f"Hi I am {self.name}, {self.age} years old and I am currently taking {self.course}.")
        print("")

# Main section where objects are created and method is called
if __name__ == "__main__":
    print("Info:")
    
    # Creating objects of Students class
    student1 = Students("Mark", 20, "Diploma in Information Technology")
    student1.introduce()
    
    student2 = Students("Axel", 20, "Bachelor of Science in Computer Science")
    student2.introduce()
    
    student3 = Students("Brenth", 20, "Bscrim")
    student3.introduce()
